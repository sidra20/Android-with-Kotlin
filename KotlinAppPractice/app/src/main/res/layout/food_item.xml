<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"

    app:cardUseCompatPadding="true"
    android:id="@+id/recipeView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/recipieImageCardItem"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerVertical="true"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/foodimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pizza" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/contentRecipieItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/recipieImageCardItem"
            android:orientation="vertical">

            <TextView
                android:id="@+id/foodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Chicken Biryani"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:fontFamily="sans-serif-black"
                android:text="Desi Food"
                android:textColor="#E63746"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="7dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true">




        </LinearLayout>

        <!--<ImageView
            android:id="@+id/viewRecipieItem"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:src="@drawable/ic_eye"
            app:tint="@color/Dark" />-->


    </RelativeLayout>


</androidx.cardview.widget.CardView>